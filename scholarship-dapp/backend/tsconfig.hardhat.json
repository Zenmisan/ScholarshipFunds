{
  // This file is used only for Hardhat compilation and script execution
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS", // Crucial: Hardhat plugins expect this
    "moduleResolution": "node", // Standard CJS resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist" // Optional: output directory
  },
  // Ensure we include the files Hardhat needs to compile
  "include": ["scripts", "test", "./hardhat.config.cts"], 
  "files": ["./hardhat.config.cts"]
}